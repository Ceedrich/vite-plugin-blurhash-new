{
  "compilerOptions": {
    "module": "AMD",
    "target": "es2017",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outFile": "dist/index.js",
    "declaration": true
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test"
  ],
}